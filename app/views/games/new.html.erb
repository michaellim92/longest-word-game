# display random letters
<ul>
  <div id="random-letters">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </div>
</ul>

<form action="/score">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :start, @starting %>
<%= hidden_field_tag :letters, @letters %>
<label for="word">Enter the longest word</label>
  <input type="text" name="word" />
  # submit button
  <input type="submit" />
</form>
 